<?xml version="1.0" encoding="UTF-8"?>
<group>

	<image name="background_image" atlas="common.atlas" frame="background" type="background"/>
	
	<button name="backButton" x="10" y="420" atlas="common.atlas" frameUp="back_button" frameDown="back_buttonH"/>
	
	<horizontal x="100" y="370" name="horizontalGroup" width="600" height="110" spacing="20" padRight="20"
				padTop="10" debug="true" reverse="true" align="top" prefHeight="30" prefWidth="20">
		<image name="image1" atlas="common.atlas" frame="accept_button"/>
		<image name="image2" atlas="common.atlas" frame="accept_button"/>
		<image name="image3" atlas="common.atlas" frame="accept_button"/>
	</horizontal>

	<vertical x="550" name="verticalGroup" width="150" height="330" debug="true" pads="0 0 5 5" 
			  reverse="true" align="right">
		<image name="image1" atlas="common.atlas" frame="accept_button"/>
		<image name="image2" atlas="common.atlas" frame="accept_button"/>
		<image name="image3" atlas="common.atlas" frame="accept_button"/>
	</vertical>

	<textbutton name="addBtn" atlas="common.atlas" ninepatch="true" frameUp="textFieldBackground"
				frameDown="textFieldBackground" npLeft="8" npRight="8" npTop="8" npBottom="8"
				x="704" y="100" width="47" height="47" text="+"
				fontName="default_font.fnt" fontColor="FFFFFF"
				tintColorUp="555555" tintColorDown="0044FF"/>
	<textbutton name="removeBtn" atlas="common.atlas" ninepatch="true" frameUp="textFieldBackground"
				frameDown="textFieldBackground" npLeft="8" npRight="8" npTop="8" npBottom="8"
				x="704" y="40" width="47" height="47" text="-"
				fontName="default_font.fnt" fontColor="FFFFFF"
				tintColorUp="555555" tintColorDown="FF0000"/>
	
	<group width="500" height="100" x="10" y="10" debug="true">
		<image name="leftNp" y="45" width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5"/>
		<image y="45" width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" tintColor="876543"
			   toRightOf="leftNp"/>

		<image name="leftNp2" y="25" width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5"/>
		<image name="rightNp" x="150" y="25" width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5"/>
		<image y="25" width="10" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" tintColor="876543"
			   toRightOf="leftNp2" toLeftOf="rightNp"/>

		<image name="aboveNp" x="200" y="80" width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5"/>
		<image name="belowNp" x="200" y="20" width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5"/>
		<image width="40" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" tintColor="876543"
			   toAboveOf="belowNp" toBelowOf="aboveNp" toRightOf="aboveNp"/>
	</group>

	<group>
		<image name="alignLeft" screenAlign="left" width="40" height="40" y="320" 
			   frame="ninepatch_bg" atlas="common.atlas" np="5"/>
		<image name="alignRight" screenAlign="right" width="40" height="40" y="320"
			   frame="ninepatch_bg" atlas="common.atlas" np="5"/>
	
		<image y="325" width="1" height="30" frame="ninepatch_bg" atlas="common.atlas" np="5" tintColor="880033" 
			   toRightOf="alignLeft" toLeftOf="alignRight"/>
		
		<group y="325" width="1" height="30" toRightOf="alignLeft" toLeftOf="alignRight" debug="true">
			<group name="middle" width="50" height="15" alignInParent="center|bottom" debug="true"/>
			
			<group alignInParent="center|left" toLeftOf="middle" width="1" height="20" debug="true"/>
			<group alignInParent="center|right" toRightOf="middle" width="1" height="20" debug="true"/>
		</group>
	</group>
	
	<group width="50" height="50" x="10" y="120" debug="true">
		<image width="10" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" alignInParent="center"/>
	</group>

	<group width="50" height="50" x="70" y="120" debug="true">
		<image width="10" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" alignInParent="center|left"/>
	</group>

	<group width="50" height="50" x="130" y="120" debug="true">
		<image width="10" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" alignInParent="bottom|right"/>
	</group>

	<group width="50" height="50" x="190" y="120" debug="true">
		<image width="10" height="10" frame="ninepatch_bg" atlas="common.atlas" np="5" alignInParent="top|center"/>
	</group>
</group>